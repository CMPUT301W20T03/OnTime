<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Request_detail_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Request DetailðŸš•"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rider_name_text"
            android:layout_width="160dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Name "
            android:textAllCaps="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/name_text"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:focusableInTouchMode="true"
            android:gravity="start"
            android:textSize="15sp"
            android:hint="Unknown"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/start_pt_text"
            android:layout_width="160dp"
            android:layout_height="38dp"
            android:textAllCaps="true"
            android:gravity="center"
            android:text="Starting PointðŸ“"
            android:textSize="15sp"
            android:textColor="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/srclocation_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:focusableInTouchMode="true"
            android:gravity="start"
            android:textSize="15sp"
            android:hint="Unknown" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/end_pt_text"
            android:layout_width="160dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="DestinationðŸ“"
            android:textSize="15sp"
            android:textColor="@color/cardview_dark_background" />
        <TextView
            android:id="@+id/destination_text"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:focusableInTouchMode="true"
            android:gravity="start"
            android:textSize="15sp"
            android:hint="Unknown"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rider_phone_text"
            android:layout_width="160dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:text="Phone number "
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textColor="@color/cardview_dark_background" />
        <TextView
            android:id="@+id/phone_text"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:focusableInTouchMode="true"
            android:gravity="start"
            android:textSize="15sp"
            android:hint="Unknown"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rider_email_text"
            android:layout_width="160dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:text="Email "
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textColor="@color/cardview_dark_background" />
        <TextView
            android:id="@+id/email_text"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:focusableInTouchMode="true"
            android:gravity="start"
            android:textSize="15sp"
            android:hint="Unknown"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rider_amount_text"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:background="@color/quantum_yellow"
            android:text="$ Total :"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textColor="@color/cardview_dark_background"
            tools:ignore="PrivateResource" />
        <TextView
            android:id="@+id/amount_text"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:hint="Unknown"
            />
    </LinearLayout>

</LinearLayout>